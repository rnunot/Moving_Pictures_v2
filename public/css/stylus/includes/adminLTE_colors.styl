  @extends $gradient-text

.bg-orange-gradient
  gradient($orange, $orange, lighten($orange, 16%))
  @extends $gradient-text

.bg-purple-gradient
  gradient($purple, $purple, lighten($purple, 16%))
  @extends $gradient-text

.bg-green-gradient
