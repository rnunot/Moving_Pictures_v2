.btn
  font-weight 500
  border-radius 3px
  border 1px solid transparent
  box-shadow inset 0px -1px 0px 0px rgba(0, 0, 0, 0.09)
  &.btn-default
    background-color #fafafa
    color #666
    border-color #ddd
    border-bottom-color #ddd
    &.btn-flat
      border-bottom-color #d9dadc
  &.btn-primary
    background-color #3c8dbc
    border-color #367fa9
  &.btn-success
    background-color #00a65a
    border-color #008d4c
  &.btn-info
    background-color #00c0ef
    border-color #00acd6
  &.btn-danger
    background-color #f56954
    border-color #f4543c
  &.btn-warning
    background-color #f39c12
    border-color #e08e0b
  &.btn-flat
    border-radius 0
    box-shadow none
    border-width 1px
  &:active
    box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)
  &:focus
    outline none
  &.btn-file
    position relative
    width 120px
    height 35px
    overflow hidden
    & > input[type='file']
      display block !important
      width 100% !important
      height 35px !important
      opacity 0 !important
      position absolute
      top -10px
      cursor pointer
  &.btn-app
    position relative
    padding 15px 5px
    margin 0 0 10px 10px
    min-width 80px
    height 60px
    box-shadow none
    border-radius 0
    text-align center
    color #666
    border 1px solid #ddd
    background-color #fafafa
    font-size 12px
    &:hover
      background #f4f4f4
      color #444
      border-color #aaa
    & > .badge
      position absolute
      top -3px
      right -10px
      font-size 10px
      font-weight 400
  &.btn-social-old
    box-shadow none
    opacity 0.9
    padding 0
    & > .fa
      padding 10px 0
      width 40px
      & + span
        border-left 1px solid rgba(255, 255, 255, 0.3)
    span
      padding 10px
    &:hover
      opacity 1
  &.btn-circle
    width 30px
    height 30px
    line-height 30px
    padding 0
    border-radius 50%

.btn.btn-default:hover,
.btn.btn-default:active,
.btn.btn-default.hover
  background-color #f4f4f4!important

.btn.btn-primary:hover,
.btn.btn-primary:active,
.btn.btn-primary.hover
  background-color #367fa9

.btn.btn-success:hover,
.btn.btn-success:active,
.btn.btn-success.hover
  background-color #008d4c

.btn.btn-info:hover,
.btn.btn-info:active,
.btn.btn-info.hover
  background-color #00acd6

.btn.btn-danger:hover,
.btn.btn-danger:active,
.btn.btn-danger.hover
  background-color #f4543c

.btn.btn-warning:hover,
.btn.btn-warning:active,
.btn.btn-warning.hover
  background-color #e08e0b

.btn.btn-app > .fa,
.btn.btn-app > .glyphicon,
.btn.btn-app > .ion
  font-size 20px
  display block

.btn.btn-app:active,
.btn.btn-app:focus
  box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.125)

