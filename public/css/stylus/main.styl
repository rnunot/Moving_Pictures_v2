//colors

$site_bg = #F2F1EC
$body_color = #fff
$nav_underline = #C7F803
$nav_font_color = #666
$nav_hover_color = darken($nav_font_color, 20%)
$drop_shadow_color = rgba(60, 26, 57, 0.2)
$body_border_color = #DDD //to make drop shadow look more natural

